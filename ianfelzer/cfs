import turtle               # allows us to use the turtles library

window = turtle.Screen()        # creates a graphics window

nick = turtle.Turtle()
    # create a turtle named nick
nick.forward(50)
nick.right(90)     # Rotate clockwise by 90 degrees

nick.forward(50)
nick.right(90)

nick.forward(50)
nick.right(90)

nick.forward(50)
nick.right(90)
window.exitonclick()
